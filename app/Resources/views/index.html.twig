{% extends 'base.html.twig' %}

{% block body %}
    <div class="col col-md-6 col-lg-offset-5 text-center">
        {% if is_granted("ROLE_CUSTOMER") %}

            <h2>Saisir votre recherche</h2>

            <form method="post">

                <div class="form-group">
                    <label>Date de d√©but</label>
                    <input class="form-control required" type="date" name="startDate" id="startDate">
                    <label>Date de fin</label>
                    <input class="form-control" type="date" name="endDate" id="endDate">
                    <label>Nombre de personnes</label>
                    <input class="form-control" type="number" name="nbPersons" id="nbPersons" maxlength="10">
                    <button type="submit" class="btn btn-primary ">Valider</button>

                </div>

            </form>
        {% else %}
            <h2>Merci de vous connecter pour saisir une recherche</h2>
        {% endif %}
    </div>

{% endblock %}